ssh-keygen -t rsa -N "" -f /home/ubuntu/.ssh/id_rsa
Copy your private AWS key as ~/.ssh/my.key 
chmod 600 .ssh/my.key
cat ~/.ssh/id_rsa.pub | ssh -i ~/.ssh/my.key ubuntu@10.0.0.X "cat >> ~/.ssh/authorized_keys"
ssh 10.0.0.X






